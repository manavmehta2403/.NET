<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:utils="clr-namespace:XamlViewer.Utils"
                    xmlns:themeUtils="clr-namespace:XamlTheme.Utils;assembly=XamlTheme">

    <utils:AnyBoolToVisibilityMultiConverter x:Key="anyBoolToVisibilityMultiConverter"/>
    <themeUtils:BoolToVisibilityConverter x:Key="boolToVisibilityConverter"/>
    <themeUtils:BoolToVisibilityConverter x:Key="collapsedBoolToVisibilityConverter" TrueVisibility="Collapsed" FalseVisibility="Visible"/>
    
    <utils:ByteSizeConverter x:Key="byteSizeConverter"/>
    <utils:FlagEnumToVisibilityConverter x:Key="flagEnumToVisibilityConverter"/>

    <themeUtils:NullToVisibilityConverter x:Key="nullToVisibilityConverter"/>
    
    <utils:ScrollOffsetToVisibilityMultiConverter x:Key="scrollOffsetToVisibilityMultiConverter"/>
    <utils:StringToVisibilityConverter x:Key="stringToVisibilityConverter"/>
    <utils:StringToBoolConverter x:Key="stringToBoolConverter"/>

    <utils:XamlTabFontStyleConverter x:Key="xamlTabFontStyleConverter"/>
    <utils:XamlTabToolTipMultiConverter x:Key="xamlTabToolTipMultiConverter"/>

    <utils:UTCToLocalDateConverter x:Key="utcToLocalDateConverter"/>
    <utils:VersionInfoMultiConverter x:Key="versionInfoMultiConverter"/>

    <utils:ZeroToVisibilityConverter x:Key="zeroToVisibilityConverter"/>

</ResourceDictionary>