<Window x:Class="SelectAllFocusBehaviorSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SelectAllFocusBehaviorSample"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Select All On Focus Behavior"
        Width="400"
        Height="300"
        mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
        <TextBox Width="150"
                 Margin="20"
                 local:SelectAllFocusBehavior.Enable="True"
                 Text="This is with Behavior" />
        <TextBox Width="150"
                 Margin="20"
                 Text="This is without Behavior" />
    </StackPanel>
</Window>
